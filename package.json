{
  "name": "reactivex-react",
  "version": "0.1.12",
  "main": "commonjs/index.js",
  "module": "esm/index.js",
  "sideEffects": false,
  "types": "esm/index.d.ts",
  "keywords": [
    "rxjs",
    "react",
    "rxjs-react",
    "reactivex",
    "reactive",
    "reactivex-react",
    "hooks",
    "react-hooks"
  ],
  "license": "MIT",
  "files": [
    "commonjs/**/*",
    "esm/**/*"
  ],
  "scripts": {
    "start": "webpack-dev-server --config ./example/webpack.config.js",
    "build": "npm-run-all -p build:commonjs build:esm",
    "build:commonjs": "rimraf commonjs && tsc -p tsconfig.build.json -m commonjs --outDir commonjs",
    "build:esm": "rimraf esm && tsc -p tsconfig.build.json -m es6 -d true --outDir esm",
    "lint": "tslint -c tslint.json src/**/*.{ts,tsx}",
    "semantic-release": "semantic-release",
    "commit": "git cz"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/react": "^16.9.32",
    "@types/react-dom": "^16.9.6",
    "@types/webpack-env": "^1.13.6",
    "awesome-typescript-loader": "^5.2.1",
    "cz-conventional-changelog": "3.1.0",
    "html-webpack-plugin": "^4.0.4",
    "husky": "^4.2.5",
    "npm-run-all": "^4.1.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.5",
    "semantic-release": "^17.0.4",
    "tslint": "^6.1.1",
    "tslint-react": "^4.0.0",
    "typescript": "^3.5.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.3",
    "webpack-dev-server": "^3.7.1",
    "webpack-notifier": "^1.7.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/IgorBabkin/rxjs-react.git"
  },
  "author": "igorbabkin <igba14@gmail.com>",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
